<%= simple_form_for @booking, :url => {:action => :update}  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
     <%= f.input_field :rconfirmed, as: :boolean, boolean_style: :inline %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary", id: "submit-button-new" %>
  </div>
<% end %>
