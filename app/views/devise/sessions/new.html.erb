<div class="login-wrapper" id= "login-photo"style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.8)), url(<%= image_path("login.jpg")%> );">
  <div class="login-container">
    <div class="login-header">
      <h2>Log in</h2>
    </div>
    <div class="login-form">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
          <%- if devise_mapping.omniauthable? %>
              <%- resource_class.omniauth_providers.each do |provider| %>
             <%= button_to "Login with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "loginBtn loginBtn--facebook" %><br />
               <% end -%>
              <% end -%>
            <% end %>
        </div>

    </div>
    <div class="shared-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
