<%= simple_form_for(@meal) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Cuisine Name", placeholder: "Pasta, Pizza, Chicken Picatta, etc."%>
    <%= f.input :description, placeholder: "Describe the Meal..."%>
    <%= f.input :photo, label: "Add a photo" %>
    <%= f.input :photo_cache, as: :hidden %>
    <%= f.input :category, label: "Type of Cuisine", placeholder: "Italian"%>
    <%= f.input :price, label: "Price per Person" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
