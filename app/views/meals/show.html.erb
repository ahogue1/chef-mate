<div class="wrapper">
  <div class="container">
    <p class="category-show">  <%= @meal.category %> </p>
    <div class="row">
      <div class="col-xs-12 col-md-4">
        <div class="left-align meal-image-show">
          <%= image_tag(@meal.photo, :class => "meal-image") %>

        </div>
      </div>
       <div class="col-xs-12 col-md-8">
        <div class="right-align meal-info">
          <h1> <%= @meal.name %></h1>
          <p>By <%= @meal.chef.name  %></p>
          <h2>  <%= @meal.description %></h2>
          <p> Price: R$  <%= @meal.price %> per person </p>
           <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" placeholder="Pick a date" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                     <input class="form-control" type="number" value="people" id="number-input" placeholder="How many people?">
                </div>
                    <input class="submit-button" type="submit" value="Request booking">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="input-group date" data-provide="datepicker">
    <input type="text" class="form-control">
    <div class="input-group-addon">
        <span class="glyphicon glyphicon-th"></span>
    </div>
</div>

  <% content_for(:after_js) do %>
    <script type="text/javascript">
      $('.datepicker').datepicker({
    format: 'mm/dd/yyyy',
    startDate: '-3d'
});
    </script>
  <% end %>





